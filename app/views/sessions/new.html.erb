
<div class="col-lg-8 col-lg-offset-2 panel panel-foodlover">
	
	<h3 class="foodlover", style="width: 100%;">Đăng nhập</h3>

	<%= form_for(:session, url: dangnhap_path) do |f| %>
		
		<% if @user != nil %>
			<% if @user.errors.any? %>
			<div id="error_explanation" class="alert alert-danger alert-dismissable">
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
			<% end %>
		<% end %>

		<% flash.each do |message_type, message| %>
			<div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>

		<div class="row">
			<div class="col-xs-4">
				<a href="#" class="btn btn-lg btn-block btn-facebook" >
					Facebook
				</a>
			</div>
			<div class="col-xs-4">
				<a href="#" class="btn btn-lg btn-block btn-twitter" >
					Twitter
				</a>
			</div>
			<div class="col-xs-4">
				<a href="#" class="btn btn-lg btn-block btn-google" >
					Google+
				</a>
			</div>
		</div>

		<hr>

		<div class="form-group">
			<div class="input-group form-group">
				<span class="input-group-addon"></span>
				<%= f.email_field :email, :class=>"form-control", placeholder: "Email", :required => true %>
			</div>
			<div class="input-group form-group">
				<span class="input-group-addon"></span>
				<%= f.password_field :password, class: "form-control", placeholder: "Nhập mật khẩu", required: true %>
			</div>
		</div>
		
		<%= f.submit "Đăng nhập", class: "btn btn-foodlover form-control"%>
	
	<% end %>

	<p>
		<div class="col-xs-6">
			<a href="#">Forgot password?</a>
		</div>
		<div class="col-xs-6 text-right">
			Don't have an account?
			<b><%= link_to "Đăng ký", new_thanhvien_path %></b>
		</div>
	</p>

</div>
