<%= form_for @monan do |f| %>
 
  <% if @monan != nil %>
    <% if @monan.errors.any? %>
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
        <ul>
          <% @monan.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
  
  <div class="form">
    <div class="form-group">
      <%= f.label "Tên món ăn" %>
      <%= f.text_field :ten, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "Miêu tả món ăn" %>
      <%= f.text_area :mieuta, class: 'form-control', style: 'height: 300px;' %>
    </div>
    <div class="form-group">
      <%= f.label "Giá" %>
      <%= f.number_field :gia, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "Ảnh" %>
    <%= f.file_field :anh %>
    </div>
    <%= f.submit "Lưu", class: 'btn btn-lg btn-block btn-foodlover' %>
  </div>

<% end %>