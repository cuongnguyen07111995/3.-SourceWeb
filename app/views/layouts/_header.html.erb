<!-- Row -->
<div class="row">

    <div class="col-xs-8 col-sm-4 col-md-3 col-xs-offset-2 col-sm-offset-4 col-md-offset-6">
        
        <!-- Search -->
        <%= form_tag root_path, :method => 'post' do %>
            <div class="input-group">
                <%= text_field_tag :search, '', class: 'form-control' %>
                <span class="input-group-btn", style="color:black;">
                    <%= button_tag(type: "submit", class: "btn btn-default", :name => nil) do %>
                        <span class="glyphicon glyphicon-search"></span>
                    <% end %>
                </button>
            </div>
        <% end %>
        <!-- ./Search -->

    </div>

    <!-- Sign in/ Sign up -->
    <div class="col-xs-12 col-sm-4 col-md-3 text-center ">
        <% if logged_in? %>
            
            <span><%= link_to 'Đăng món', new_monan_path %></span>
            <span>|</span>
            <span class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    <%= @current_user.hoten %>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to "Hồ sơ cá nhân", "thanhvien/edit" %></li>
                    <li><%= link_to "Chỉnh sửa thông tin", '#' %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Đăng xuất", dangxuat_path, method: "delete" %></li>
                </ul>
            </span>

        <% else %>
            
            <span><%= link_to "Đăng nhập", dangnhap_path %></span>
            <span>|</span>
            <span><%= link_to "Đăng ký", new_thanhvien_path %></span>
            
        <% end %>

        <span><%= image_tag 'flag_vietnam.png' %></span>
    </div>
    <!-- ./Sign in/ Sign up -->

</div>
